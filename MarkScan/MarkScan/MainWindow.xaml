<Window x:Class="MarkScan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarkScan"
        mc:Ignorable="d"
        Title="Mark Scan.Net" Height="700" Width="640"  Background="#FF8ADFFF" Icon="Resources/CVC.ico" Closing="Window_Closing" StateChanged="Window_StateChanged" >
    <Grid>
        <Frame x:Name="generalFrame" NavigationUIVisibility="Hidden" Margin="0,0,0,10"/>
        <Label x:Name="verLb" Content="Ver:0.0.0" Height="28" VerticalAlignment="Bottom" FontSize="13.333" Margin="0,0,23,0" HorizontalContentAlignment="Right" HorizontalAlignment="Right" Width="66"/>
        <Label x:Name="loginLb" Content="00000000000000000" Height="28" VerticalAlignment="Bottom" FontSize="13.333" HorizontalAlignment="Left" Width="162" Margin="3,0,0,0"/>
        <Image x:Name="image" Margin="0,0,10,6" HorizontalAlignment="Right" Width="14" Height="14" VerticalAlignment="Bottom" Source="Imgs/CheckUpdate32.png" Stretch="Fill" MouseDown="image_MouseDown" Cursor="Hand" />

    </Grid>
</Window>
