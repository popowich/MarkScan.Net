<Page x:Class="MarkScan.Pages.QuaerePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MarkScan.Pages"
      mc:Ignorable="d" 
      d:DesignWidth="640" d:DesignHeight="595"
      Title="QuaerePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="217*"/>
            <RowDefinition Height="88"/>
            <RowDefinition Height="61"/>
            <RowDefinition Height="229*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="quaereText" Grid.Row="1" Text="Текст вопроса" FontSize="20" HorizontalAlignment="Center" Width="640" TextAlignment="Center" TextWrapping="Wrap" />
        <Button x:Name="yesBt" Content="Да" HorizontalAlignment="Center" Margin="119,0,353,0" Grid.Row="2" VerticalAlignment="Top" Width="168" Height="61" FontSize="20" Background="#FF0F6FC6" Foreground="White" Click="yesBt_Click"/>
        <Button x:Name="noBt" Content="Нет" Margin="353,0,119,0" Grid.Row="2" VerticalAlignment="Top" Height="61" FontSize="20" HorizontalAlignment="Center" Width="168" Background="#FF0F6FC6" Foreground="White" Click="noBt_Click"/>

    </Grid>
</Page>
